# Protection contre les aspirateurs de sites et robots malveillants
RewriteEngine On

# Bloquer les user agents suspects
RewriteCond %{HTTP_USER_AGENT} (bot|crawler|spider|scraper|curl|wget|python|php|java|perl|ruby|go-http) [NC]
RewriteRule ^(.*)$ - [F,L]

## Désactivé: Bloquer les requêtes sans referer (peut casser l'accès direct et des ressources légitimes)
# RewriteCond %{HTTP_REFERER} ^$
# RewriteCond %{REQUEST_METHOD} GET
# RewriteCond %{REQUEST_URI} !^/favicon\.ico$
# RewriteRule ^(.*)$ - [F,L]

# Bloquer les tentatives d'accès aux fichiers sensibles
<FilesMatch "\.(js|css|php|html|htm)$">
    # Empêcher l'accès direct aux fichiers
    Header set X-Robots-Tag "noindex, nofollow, noarchive, nosnippet"
</FilesMatch>

## Désactivé: Protection hotlinking (à reconfigurer avec votre vrai domaine si nécessaire)
# RewriteCond %{HTTP_REFERER} !^$
# RewriteCond %{HTTP_REFERER} !^https?://(www\.)?votre-domaine\.com [NC]
# RewriteRule \.(jpg|jpeg|png|gif|css|js)$ - [F,L]

# Limiter les requêtes par IP
<RequireAll>
    Require all granted
    # Ajouter ici des règles spécifiques si nécessaire
</RequireAll>

# Headers de sécurité
Header always set X-Frame-Options "DENY"
Header always set X-Content-Type-Options "nosniff"
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "no-referrer"
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

# Désactiver l'affichage des erreurs
php_flag display_errors Off
php_flag log_errors On

# Protection contre les injections
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} proc/self/environ [OR]
    RewriteCond %{QUERY_STRING} mosConfig_[a-zA-Z_]{1,21}(=|\%3D) [OR]
    RewriteCond %{QUERY_STRING} base64_(en|de)code[^(]*\([^)]*\) [OR]
    RewriteCond %{QUERY_STRING} (<|%3C)([^s]*s)+cript.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} (\<|%3C).*iframe.*(\>|%3E) [NC]
    RewriteRule .* - [F]
</IfModule>
